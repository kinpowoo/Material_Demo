<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="0dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <Button
                android:id="@+id/open_wifi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/framework_library_blue_border_white_bg"
                android:text="打开WIFI"
                android:textColor="@color/theme_color_primary_text" />

            <Button
                android:id="@+id/close_wifi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/framework_library_blue_border_white_bg"
                android:text="关闭WIFI"
                android:textColor="@color/theme_color_primary_text" />

            <Button
                android:id="@+id/open_mobile_network"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/framework_library_blue_border_white_bg"
                android:text="打开移动网络"
                android:textColor="@color/theme_color_primary_text" />

            <Button
                android:id="@+id/close_mobile_network"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/framework_library_blue_border_white_bg"
                android:text="关闭移动网络"
                android:textColor="@color/theme_color_primary_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <Button
                android:id="@+id/get_device_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/framework_library_blue_border_white_bg"
                android:text="获取硬件信息"
                android:textColor="@color/theme_color_primary_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Hello World!"
                android:textColor="@color/theme_color_primary_text" />


            <com.bilibili.magicasakura.widgets.TintButton
                android:id="@+id/post_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/framework_library_click_affect"
                android:padding="8dp"
                android:text="向MessageDemoActivity发送消息" />

            <com.bilibili.magicasakura.widgets.TintButton
                android:id="@+id/enter_web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/framework_library_click_affect"
                android:padding="8dp"
                android:text="进入通用web页面" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.bilibili.magicasakura.widgets.TintButton
                    android:id="@+id/enter_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/framework_library_click_affect"
                    android:padding="8dp"
                    android:text="进入关于页面" />

                <com.bilibili.magicasakura.widgets.TintButton
                    android:id="@+id/enter_qrcode_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/framework_library_click_affect"
                    android:padding="8dp"
                    android:text="进入扫描页面" />

                <com.bilibili.magicasakura.widgets.TintButton
                    android:id="@+id/load_apk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/framework_library_click_affect"
                    android:padding="8dp"
                    android:text="加载apk" />

                <com.bilibili.magicasakura.widgets.TintButton
                    android:id="@+id/show_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/framework_library_click_affect"
                    android:padding="8dp"
                    android:text="显示Dialog" />
            </LinearLayout>

            <EditText
                android:id="@+id/device_info"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:background="@drawable/framework_library_black_border_white_bg"
                android:enabled="true"
                android:gravity="top"
                android:maxLines="10"
                android:minLines="8"
                android:padding="5dp"
                android:scrollbars="vertical"
                android:textColor="@color/theme_color_primary_text" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/psd" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>


