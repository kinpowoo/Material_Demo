<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />
    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/night_mode_area"
                android:padding="@dimen/fab_margin"
                android:background="@color/theme_color_bg"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="夜间模式:"
                    android:textColor="@color/theme_color_primary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/night_mode_on"
                    android:layout_marginLeft="15dp"
                    app:thumbTint="@color/theme_color_primary_dark"
                    app:trackTint="@color/theme_color_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="?attr/dialogPreferredPadding"
                android:paddingRight="?attr/dialogPreferredPadding"
                android:paddingTop="?attr/dialogPreferredPadding">

                <ImageView
                    android:id="@+id/theme_red"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/red_primary"
                    android:scaleType="centerInside"
                    android:src="@drawable/selector_pick_item" />


                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/theme_pink"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/pink_primary"
                    android:scaleType="centerInside"
                    android:src="@drawable/selector_pick_item" />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/theme_purple"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/purple_primary"
                    android:scaleType="centerInside"
                    android:src="@drawable/selector_pick_item" />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/theme_deep_purple"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/deep_purple_primary"
                    android:scaleType="centerInside"
                    android:src="@drawable/selector_pick_item" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="?attr/dialogPreferredPadding"
                android:paddingRight="?attr/dialogPreferredPadding"
                android:paddingTop="?attr/dialogPreferredPadding">

                <ImageView
                    android:id="@+id/theme_indigo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/indigo_primary"
                    android:scaleType="centerInside"
                    android:src="@drawable/selector_pick_item" />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/theme_blue"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/blue_primary"
                    android:scaleType="centerInside"
                    android:src="@drawable/selector_pick_item" />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/theme_light_blue"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/light_blue_primary"
                    android:scaleType="centerInside"
                    android:src="@drawable/selector_pick_item" />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/theme_cyan"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/cyan_primary"
                    android:scaleType="centerInside"
                    android:src="@drawable/selector_pick_item" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="?attr/dialogPreferredPadding"
                android:paddingRight="?attr/dialogPreferredPadding"
                android:paddingTop="?attr/dialogPreferredPadding">

                <ImageView
                    android:id="@+id/theme_teal"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/teal_primary"
                    android:scaleType="centerInside"
                    android:src="@drawable/selector_pick_item" />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/theme_green"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/green_primary"
                    android:scaleType="centerInside"
                    android:src="@drawable/selector_pick_item" />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/theme_light_green"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/light_green_primary"
                    android:scaleType="centerInside"
                    android:src="@drawable/selector_pick_item" />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/theme_lime"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/lime_primary"
                    android:scaleType="centerInside"
                    android:src="@drawable/selector_pick_item" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="?attr/dialogPreferredPadding"
                android:paddingRight="?attr/dialogPreferredPadding"
                android:paddingTop="?attr/dialogPreferredPadding">

                <ImageView
                    android:id="@+id/theme_yellow"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/yellow_primary"
                    android:scaleType="centerInside"
                    android:src="@drawable/selector_pick_item" />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/theme_amber"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/amber_primary"
                    android:scaleType="centerInside"
                    android:src="@drawable/selector_pick_item" />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/theme_orange"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/orange_primary"
                    android:scaleType="centerInside"
                    android:src="@drawable/selector_pick_item" />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/theme_deep_orange"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/deep_orange_primary"
                    android:scaleType="centerInside"
                    android:src="@drawable/selector_pick_item" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="?attr/dialogPreferredPadding"
                android:paddingRight="?attr/dialogPreferredPadding"
                android:paddingTop="?attr/dialogPreferredPadding">

                <ImageView
                    android:id="@+id/theme_brown"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/brown_primary"
                    android:scaleType="centerInside"
                    android:src="@drawable/selector_pick_item" />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/theme_grey"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/grey_primary"
                    android:scaleType="centerInside"
                    android:src="@drawable/selector_pick_item" />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/theme_blue_grey"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/blue_grey_primary"
                    android:scaleType="centerInside"
                    android:src="@drawable/selector_pick_item" />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerInside"
                   />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>